# Stacks Blockchain Configuration
# Copy this file to .env and fill in your values

# Network (testnet or mainnet)
STACKS_NETWORK=testnet

# Your Stacks private key (for signing transactions)
STACKS_PRIVATE_KEY=your_private_key_here

# Your Stacks address (for deploying contracts)
STACKS_DEPLOYER_ADDRESS=your_stacks_address_here

# Testnet faucet URL (for getting test STX)
STACKS_TESTNET_FAUCET=https://faucet.testnet.hiro.so

# Stacks API endpoints (StacksNet)
STACKS_TESTNET_API=https://stacks-node-api.testnet.stacks.co
STACKS_MAINNET_API=https://stacks-node-api.mainnet.stacks.co

# Contract deployment settings
CONTRACT_DEPLOYMENT_FEE=100000
CONTRACT_DEPLOYMENT_TIMEOUT=300000

# Verification settings
VERIFICATION_THRESHOLD=80
MINIMUM_SENSOR_READINGS=10
DATA_FRESHNESS_LIMIT_DAYS=7

# Marketplace settings
MARKETPLACE_FEE_PERCENTAGE=0.25
MINIMUM_LISTING_DURATION_HOURS=24
MAXIMUM_LISTING_DURATION_DAYS=7
